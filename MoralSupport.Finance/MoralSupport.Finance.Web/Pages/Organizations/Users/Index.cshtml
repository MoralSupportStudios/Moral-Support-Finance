@page
@model MoralSupport.Finance.Web.Pages.Organizations.Users.IndexModel

@{
    ViewData["Title"] = "User Organizations";
}

<h2 class="text-center mt-4">Employee Management</h2>

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <strong>Assigned Employee</strong>
        </div>
        <div class="table-responsive">
            <table class="table table-bordered mb-0">
                <thead class="thead-light">
                    <tr>
                        <th>Employee</th>
                        <th>Employer</th>
                        <th>Role</th>
                        <th style="width: 200px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.UserOrganization)
                    {
                        <tr>
                            <td>@item.User.Email</td>
                            <td>@item.Organization.Name</td>
                            <td>@item.Role</td>
                            <td>
                                <div class="d-flex gap-2">
                                    <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-primary btn-sm">view</a>
                                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-secondary btn-sm">edit</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="card-footer text-end">
            <a asp-page="Create" class="btn btn-success">Assign Employee to Employer</a>
        </div>
    </div>
</div>
