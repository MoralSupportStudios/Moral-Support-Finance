@page
@model MoralSupport.Finance.Web.Pages.Organizations.Users.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Employee</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UserOrganization.Id" />
            <div class="form-group">
                <label asp-for="UserOrganization.UserId" class="control-label"></label>
                <select asp-for="UserOrganization.UserId" class="form-control" asp-items="ViewBag.UserId"></select>
                <span asp-validation-for="UserOrganization.UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserOrganization.OrganizationId" class="control-label"></label>
                <select asp-for="UserOrganization.OrganizationId" class="form-control" asp-items="ViewBag.OrganizationId"></select>
                <span asp-validation-for="UserOrganization.OrganizationId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserOrganization.Role" class="control-label"></label>
                <input asp-for="UserOrganization.Role" class="form-control" />
                <span asp-validation-for="UserOrganization.Role" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
        <form method="post" asp-page="./Delete" asp-route-id="@Model.UserOrganization.Id"
              onsubmit="return confirm('Are you sure you want to delete this Employee?');">
            <button type="submit" class="btn btn-danger mt-2">Delete</button>
            <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
