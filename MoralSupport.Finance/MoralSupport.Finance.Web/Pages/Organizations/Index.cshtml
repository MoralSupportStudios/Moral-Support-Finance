@page
@model MoralSupport.Finance.Web.Pages.Organizations.IndexModel

@{
    ViewData["Title"] = "Organizations";
}

<h2 class="text-center mt-4">Employer</h2>

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <strong>Employer List</strong>
        </div>
        <div class="table-responsive">
            <table class="table table-bordered mb-0">
                <thead class="thead-light">
                    <tr>
                        <th>Name</th>
                        <th>Created</th>
                        <th style="width: 180px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Organizations)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.CreatedAt.ToString("yyyy-MM-dd")</td>
                            <td>
                                <div class="d-flex gap-2">
                                    <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-primary btn-sm">view</a>
                                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">edit</a>
                                </div>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="card-footer">
            <a asp-page="Create" class="btn btn-success">Add Employer</a>
        </div>
        
