@page
@model MoralSupport.Finance.Web.Pages.Accounts.IndexModel
@{
    ViewData["Title"] = "Accounts";
}

<h2 class="text-center mt-4">Accounts</h2>

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <strong>Account Summary</strong>
        </div>
        <div class="table-responsive">
            <table class="table table-bordered mb-0">
                <thead class="thead-light">
                    <tr>
                        <th>Name</th>
                        <th>Type</th>
                        <th>Institution</th>
                        <th>Balance</th>
                        <th style="width: 150px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Account)
                    {
                        <tr>
                            <td>@item.AccountName</td>
                            <td>@item.AccountType?.TypeName</td>
                            <td>@item.Institution</td>
                            <td>@item.Balance.ToString("F2")</td>
                            <td>
                                <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-primary btn-sm">view</a>
                                <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">edit</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="card-footer">
            <a asp-page="Create" class="btn btn-success">Add Account</a>
        </div>
    </div>
</div>
