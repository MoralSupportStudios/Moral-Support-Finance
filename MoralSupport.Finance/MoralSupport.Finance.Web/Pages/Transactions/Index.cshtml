@page
@model MoralSupport.Finance.Web.Pages.Transactions.IndexModel
@{
    ViewData["Title"] = "Transactions";
}

<h2 class="text-center mt-4">Transactions</h2>

<form method="get" class="card p-3 mb-4">
    <div class="row g-3 align-items-end">
        <div class="col-md-3">
            <label asp-for="AccountId" class="form-label">Account</label>
            <select asp-for="AccountId" class="form-select">
                <option value="">All</option>
                @foreach (var acc in Model.Accounts)
                {
                    <option value="@acc.Id">@acc.AccountName</option>
                }
            </select>
        </div>
        <div class="col-md-2">
            <label asp-for="DateFrom" class="form-label">To</label>
            <input asp-for="DateFrom" type="date" class="form-control" />
        </div>
        <div class="col-md-2">
            <label asp-for="DateTo" class="form-label">From</label>
            <input asp-for="DateTo" type="date" class="form-control" />
        </div>

        <div class="col-md-2">
            <label asp-for="IsExpense" class="form-label">Type</label>
            <select asp-for="IsExpense" class="form-select">
                <option value="">All</option>
                <option value="true">Expense</option>
                <option value="false">Income</option>
            </select>
        </div>
        <div class="col-md-3">
            <label asp-for="CheckNumber" class="form-label">Check Number</label>
            <input asp-for="CheckNumber" class="form-control" placeholder="Enter check #" />
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-success w-100">Apply Filters</button>
        </div>
    </div>
</form>

<div class="card">
    <div class="card-header fw-bold">Transaction History</div>
    <div class="table-responsive">
        <table class="table table-striped table-bordered mb-0">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Account</th>
                    <th>Payee</th>
                    <th>Amount</th>
                    <th>Type</th>
                    <th>Check #</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Transactions)
                {
                    <tr>
                        <td>@item.TransactionDate.ToString("yyyy-MM-dd")</td>
                        <td>@item.Account?.AccountName</td>
                        <td>@item.Payee?.PayeeName</td>
                        <td>@item.Amount.ToString("F2")</td>
                        <td>@(item.IsExpense ? "Expense" : "Income")</td>
                        <td>@item.Description</td>
                        <td>
                            <a asp-page="Details" asp-route-id="@item.Id" class="btn btn-primary btn-sm">View</a>
                            <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-secondary btn-sm ms-1">Edit</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="card-footer text-end">
        <a asp-page="Create" class="btn btn-success">Add Transaction</a>
    </div>
</div>
